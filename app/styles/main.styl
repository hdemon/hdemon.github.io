html
    height 100%
    margin 0

body
    background #fafafa
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    color: #4d4d4d
    height 100%
    margin 0

#app
    height 100%
    padding 50px
    background-color #efefef
    display flex
    flex-direction column

#window
    position relative
    max-width 1000px
    margin: 0
    height 100%
    overflow-x hidden
    background-color #efefef
    flex-grow 1

clearfix()
    &:after
        content ""
        clear both
        display block


